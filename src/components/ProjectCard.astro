---
import { getLangFromUrl, useTranslations } from "../i18n/utils";
export interface Props {
  name: string;
  description_en?: string;
  description_es?: string;
  description?: string; // backward compatibility
  link_github?: string;
  link_vercel?: string;
  technologies?: string[];
  featured?: boolean;
}
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const {
  name,
  description_en,
  description_es,
  description,
  link_github,
  link_vercel,
  technologies = [],
  featured = false,
} = Astro.props;

// Determine which description to use based on language
const displayDescription = lang === 'es' ? description_es : description_en || description;
---

<div
  class={`group bg-white dark:bg-gray-800 rounded-xl border border-gray-200 dark:border-gray-700 p-6 transition-all duration-300 hover:shadow-lg hover:-translate-y-1 ${featured ? "ring-2 ring-blue-200 dark:ring-blue-800" : ""}`}
>
  {
    featured && (
      <div class="flex items-center mb-3">
        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-300">
          {t("projects.highlighted")}
        </span>
      </div>
    )
  }

  <div class="flex flex-col h-full">
    <h3
      class="text-lg font-semibold text-gray-900 dark:text-white mb-2 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors"
    >
      {name}
    </h3>

    <p
      class="text-gray-600 dark:text-gray-300 mb-4 flex-1 text-sm leading-relaxed"
    >
      {displayDescription}
    </p>

    {
      technologies.length > 0 && (
        <div class="flex flex-wrap gap-2 mb-4">
          {technologies.map((tech) => (
            <span class="inline-flex items-center px-2.5 py-1 rounded-md text-xs font-medium bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-300">
              {tech}
            </span>
          ))}
        </div>
      )
    }

    <div class="flex items-center justify-between">
      <div class="flex items-center gap-3">
        {
          link_vercel && (
            <a
              href={link_vercel}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center text-sm font-medium text-green-600 hover:text-green-700 dark:text-green-400 dark:hover:text-green-300 transition-colors group/link"
              onclick={`import('/src/scripts/analytics.js').then(module => module.trackProjectClick('${name}', '${link_vercel}'))`}
            >
              {t("projects.vercel.button")}
              <svg
                class="ml-1 h-4 w-4 transform transition-transform group-hover/link:translate-x-1"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
                />
              </svg>
            </a>
          )
        }

        {
          link_github && (
            <a
              href={link_github}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center text-sm font-medium text-blue-600 hover:text-blue-700 dark:text-blue-400 dark:hover:text-blue-300 transition-colors group/link"
              onclick={`import('/src/scripts/analytics.js').then(module => module.trackProjectClick('${name}', '${link_github}'))`}
            >
              GitHub
              <svg class="ml-1 h-4 w-4" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.30.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z" />
              </svg>
            </a>
          )
        }
      </div>
    </div>
  </div>
</div>
