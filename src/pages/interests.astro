---
import MainLayout from '../layouts/MainLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Button from '../components/Button.astro';
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<MainLayout title={t('interests.title')}>
  <Header slot="header" />
  
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
    <!-- Header -->
    <div class="text-center mb-16 fade-in">
      <h1 class="text-4xl lg:text-5xl font-bold text-gray-900 dark:text-white mb-6">
        {t('interests.heading')}
      </h1>
      <p class="text-xl text-gray-600 dark:text-gray-300 max-w-3xl mx-auto">
        {t('interests.subtitle')}
      </p>
    </div>


    <!-- Detailed Sections -->
    <div class="space-y-16">
      <!-- AI Section -->
      <section id="ai-section" class="slide-up stagger-1 scroll-mt-32">
        <div class="bg-gradient-to-r from-purple-50 to-blue-50 dark:from-purple-900/20 dark:to-blue-900/20 rounded-2xl p-8 lg:p-12">
          <div class="max-w-4xl mx-auto">
            <div class="flex items-center mb-6">
              <span class="text-4xl mr-4">🤖</span>
              <h2 class="text-3xl font-bold text-gray-900 dark:text-white">
                {t('interests.ai.title')}
              </h2>
            </div>
            
            <p class="text-lg text-gray-700 dark:text-gray-300 mb-6">
              {t('interests.ai.description')}
            </p>
            
            <div class="grid md:grid-cols-2 gap-6">
              <div class="bg-white dark:bg-gray-800 rounded-xl p-6">
                <h3 class="font-semibold text-gray-900 dark:text-white mb-3">{t('interests.ai.mobile')}</h3>
                <p class="text-gray-600 dark:text-gray-300">
                  {t('interests.ai.mobile.desc')}
                </p>
              </div>
              
              <div class="bg-white dark:bg-gray-800 rounded-xl p-6">
                <h3 class="font-semibold text-gray-900 dark:text-white mb-3">{t('interests.ai.apis')}</h3>
                <p class="text-gray-600 dark:text-gray-300">
                  {t('interests.ai.apis.desc')}
                </p>
              </div>
            </div>
          </div>
        </div>
      </section>

      <!-- Finance Section -->
      <section id="finance-section" class="slide-up stagger-2 scroll-mt-32">
        <div class="bg-gradient-to-r from-green-50 to-emerald-50 dark:from-green-900/20 dark:to-emerald-900/20 rounded-2xl p-8 lg:p-12">
          <div class="max-w-4xl mx-auto">
            <div class="flex items-center mb-6">
              <span class="text-4xl mr-4">💰</span>
              <h2 class="text-3xl font-bold text-gray-900 dark:text-white">
                {t('interests.finance.title')}
              </h2>
            </div>
            
            <p class="text-lg text-gray-700 dark:text-gray-300 mb-6">
              {t('interests.finance.description')}
            </p>
            
            <div class="grid md:grid-cols-3 gap-6">
              <div class="bg-white dark:bg-gray-800 rounded-xl p-6 text-center">
                <div class="text-2xl mb-3">📊</div>
                <h3 class="font-semibold text-gray-900 dark:text-white mb-2">{t('interests.finance.analysis')}</h3>
                <p class="text-sm text-gray-600 dark:text-gray-300">
                  {t('interests.finance.analysis.desc')}
                </p>
              </div>
              
              <div class="bg-white dark:bg-gray-800 rounded-xl p-6 text-center">
                <div class="text-2xl mb-3">💳</div>
                <h3 class="font-semibold text-gray-900 dark:text-white mb-2">{t('interests.finance.fintech')}</h3>
                <p class="text-sm text-gray-600 dark:text-gray-300">
                  {t('interests.finance.fintech.desc')}
                </p>
              </div>
              
              <div class="bg-white dark:bg-gray-800 rounded-xl p-6 text-center">
                <div class="text-2xl mb-3">📱</div>
                <h3 class="font-semibold text-gray-900 dark:text-white mb-2">{t('interests.finance.apps')}</h3>
                <p class="text-sm text-gray-600 dark:text-gray-300">
                  {t('interests.finance.apps.desc')}
                </p>
              </div>
            </div>
          </div>
        </div>
      </section>

      <!-- Personal Development Section -->
      <section id="development-section" class="slide-up stagger-3 scroll-mt-32">
        <div class="bg-gradient-to-r from-orange-50 to-red-50 dark:from-orange-900/20 dark:to-red-900/20 rounded-2xl p-8 lg:p-12">
          <div class="max-w-4xl mx-auto">
            <div class="flex items-center mb-6">
              <span class="text-4xl mr-4">🚀</span>
              <h2 class="text-3xl font-bold text-gray-900 dark:text-white">
                {t('interests.development.title')}
              </h2>
            </div>
            
            <p class="text-lg text-gray-700 dark:text-gray-300 mb-8">
              {t('interests.development.description')}
            </p>
            
            <div class="grid md:grid-cols-2 gap-8">
              <div>
                <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-4">{t('interests.development.principles')}</h3>
                <ul class="space-y-3 text-gray-600 dark:text-gray-300">
                  <li class="flex items-center">
                    <div class="w-2 h-2 bg-orange-500 rounded-full mr-3"></div>
                    {t('interests.development.learning')}
                  </li>
                  <li class="flex items-center">
                    <div class="w-2 h-2 bg-orange-500 rounded-full mr-3"></div>
                    {t('interests.development.balance')}
                  </li>
                  <li class="flex items-center">
                    <div class="w-2 h-2 bg-orange-500 rounded-full mr-3"></div>
                    {t('interests.development.sharing')}
                  </li>
                  <li class="flex items-center">
                    <div class="w-2 h-2 bg-orange-500 rounded-full mr-3"></div>
                    {t('interests.development.challenges')}
                  </li>
                </ul>
              </div>
              
              <div class="bg-white dark:bg-gray-800 rounded-xl p-6">
                <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-4">{t('interests.development.currently')}</h3>
                <div class="space-y-2">
                  <div class="flex items-center justify-between">
                    <span class="text-gray-600 dark:text-gray-300">Artificial Intelligence</span>
                    <div class="w-24 bg-gray-200 dark:bg-gray-700 rounded-full h-2">
                      <div class="bg-orange-500 h-2 rounded-full w-3/4"></div>
                    </div>
                  </div>
                  <div class="flex items-center justify-between">
                    <span class="text-gray-600 dark:text-gray-300">Machine Learning</span>
                    <div class="w-24 bg-gray-200 dark:bg-gray-700 rounded-full h-2">
                      <div class="bg-orange-500 h-2 rounded-full w-2/3"></div>
                    </div>
                  </div>
                  <div class="flex items-center justify-between">
                    <span class="text-gray-600 dark:text-gray-300">Cloud Computing</span>
                    <div class="w-24 bg-gray-200 dark:bg-gray-700 rounded-full h-2">
                      <div class="bg-orange-500 h-2 rounded-full w-1/2"></div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>

      <!-- Self-Knowledge & Mindfulness Section -->
      <section id="mindfulness-section" class="slide-up stagger-4 scroll-mt-32">
        <div class="bg-gradient-to-r from-indigo-50 to-purple-50 dark:from-indigo-900/20 dark:to-purple-900/20 rounded-2xl p-8 lg:p-12">
          <div class="max-w-4xl mx-auto">
            <div class="flex items-center mb-6">
              <span class="text-4xl mr-4">🧠</span>
              <h2 class="text-3xl font-bold text-gray-900 dark:text-white">
                {t('interests.mindfulness.title')}
              </h2>
            </div>
            
            <p class="text-lg text-gray-700 dark:text-gray-300 mb-8">
              {t('interests.mindfulness.description')}
            </p>
            
            <div class="grid md:grid-cols-2 gap-8">
              <div>
                <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-4">{t('interests.mindfulness.areas')}</h3>
                <ul class="space-y-3 text-gray-600 dark:text-gray-300">
                  <li class="flex items-center">
                    <div class="w-2 h-2 bg-indigo-500 rounded-full mr-3"></div>
                    {t('interests.mindfulness.psychology')}
                  </li>
                  <li class="flex items-center">
                    <div class="w-2 h-2 bg-indigo-500 rounded-full mr-3"></div>
                    {t('interests.mindfulness.neuroscience')}
                  </li>
                  <li class="flex items-center">
                    <div class="w-2 h-2 bg-indigo-500 rounded-full mr-3"></div>
                    {t('interests.mindfulness.meditation')}
                  </li>
                  <li class="flex items-center">
                    <div class="w-2 h-2 bg-indigo-500 rounded-full mr-3"></div>
                    {t('interests.mindfulness.yoga')}
                  </li>
                </ul>
              </div>
              
              <div class="bg-white dark:bg-gray-800 rounded-xl p-6">
                <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-4">{t('interests.mindfulness.books')}</h3>
                <div class="space-y-3 text-gray-600 dark:text-gray-300">
                  <div class="flex items-start">
                    <span class="text-indigo-500 mr-2">📖</span>
                    <span class="text-sm">{t('interests.mindfulness.book1')}</span>
                  </div>
                  <div class="flex items-start">
                    <span class="text-indigo-500 mr-2">📖</span>
                    <span class="text-sm">{t('interests.mindfulness.book2')}</span>
                  </div>
                  <div class="flex items-start">
                    <span class="text-indigo-500 mr-2">📖</span>
                    <span class="text-sm">{t('interests.mindfulness.book3')}</span>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>

      <!-- Cooking Section -->
      <section id="cooking-section" class="slide-up stagger-5 scroll-mt-32">
        <div class="bg-gradient-to-r from-yellow-50 to-amber-50 dark:from-yellow-900/20 dark:to-amber-900/20 rounded-2xl p-8 lg:p-12">
          <div class="max-w-4xl mx-auto text-center">
            <div class="flex justify-center items-center mb-6">
              <span class="text-4xl mr-4">👨‍🍳</span>
              <h2 class="text-3xl font-bold text-gray-900 dark:text-white">
                {t('interests.cooking.title')}
              </h2>
            </div>
            
            <p class="text-lg text-gray-700 dark:text-gray-300 mb-8 max-w-2xl mx-auto">
              {t('interests.cooking.description')}
            </p>
            
            <div class="grid sm:grid-cols-3 gap-6">
              <div class="bg-white dark:bg-gray-800 rounded-xl p-6">
                <div class="text-2xl mb-3">🍝</div>
                <h3 class="font-semibold text-gray-900 dark:text-white mb-2">{t('interests.cooking.pasta')}</h3>
                <p class="text-sm text-gray-600 dark:text-gray-300">{t('interests.cooking.pasta.desc')}</p>
              </div>
              
              <div class="bg-white dark:bg-gray-800 rounded-xl p-6">
                <div class="text-2xl mb-3">🥘</div>
                <h3 class="font-semibold text-gray-900 dark:text-white mb-2">{t('interests.cooking.argentine')}</h3>
                <p class="text-sm text-gray-600 dark:text-gray-300">{t('interests.cooking.argentine.desc')}</p>
              </div>
              
              <div class="bg-white dark:bg-gray-800 rounded-xl p-6">
                <div class="text-2xl mb-3">🍣</div>
                <h3 class="font-semibold text-gray-900 dark:text-white mb-2">{t('interests.cooking.asian')}</h3>
                <p class="text-sm text-gray-600 dark:text-gray-300">{t('interests.cooking.asian.desc')}</p>
              </div>
            </div>
          </div>
        </div>
      </section>
    </div>

    <!-- How to Add Interests -->
    <section class="mt-16 bg-gray-50 dark:bg-gray-800 rounded-2xl p-8 slide-up stagger-6">
      <div class="max-w-3xl mx-auto">
        <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-4 flex items-center">
          <span class="mr-2">💡</span>
          {t('interests.howto.title')}
        </h3>
        <p class="text-gray-600 dark:text-gray-300 mb-4">
          {t('interests.howto.description')} 
          <code class="bg-gray-200 dark:bg-gray-700 px-2 py-1 rounded text-sm">src/data/interests.json</code>
        </p>
        <div class="bg-gray-900 rounded-lg p-4 text-sm">
          <pre class="text-green-400"><code>{`{
  "name": "Interest Name",
  "description": "Interest description...",
  "icon": "🎯"
}`}</code></pre>
        </div>
      </div>
    </section>

    <!-- CTA -->
    <section class="text-center py-16 slide-up stagger-7">
      <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-4">
        {t('interests.cta.title')}
      </h2>
      <p class="text-xl text-gray-600 dark:text-gray-300 mb-8 max-w-2xl mx-auto">
        {t('interests.cta.description')}
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <Button href={lang === 'en' ? '/contact' : `/${lang}/contact`} variant="primary" size="lg">
          {t('interests.cta.talk')}
        </Button>
        <Button href={lang === 'en' ? '/projects' : `/${lang}/projects`} variant="outline" size="lg">
          {t('interests.cta.projects')}
        </Button>
      </div>
    </section>
  </div>

  <Footer slot="footer" />
</MainLayout>