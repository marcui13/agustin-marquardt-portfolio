---
import MainLayout from '../layouts/MainLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Button from '../components/Button.astro';
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<MainLayout title={t('contact.title')}>
  <Header slot="header" />
  
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
    <!-- Header -->
    <div class="text-center mb-16 fade-in">
      <h1 class="text-4xl lg:text-5xl font-bold text-gray-900 dark:text-white mb-6">
        {t('contact.heading')}
      </h1>
      <p class="text-xl text-gray-600 dark:text-gray-300 max-w-3xl mx-auto">
        {t('contact.subtitle')}
      </p>
    </div>

    <!-- Contact Methods -->
    <div class="grid lg:grid-cols-2 gap-12 mb-16">
      <!-- Contact Cards -->
      <div class="space-y-6">
        <div class="slide-up stagger-1">
          <div class="bg-white dark:bg-gray-800 rounded-xl p-8 border border-gray-200 dark:border-gray-700 hover:shadow-lg transition-shadow">
            <div class="flex items-start space-x-4">
              <div class="flex-shrink-0 w-12 h-12 bg-blue-100 dark:bg-blue-900 rounded-lg flex items-center justify-center">
                <svg class="h-6 w-6 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 7.89a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                </svg>
              </div>
              <div class="flex-1">
                <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">{t('contact.email.title')}</h3>
                <p class="text-gray-600 dark:text-gray-300 mb-4">
                  {t('contact.email.description')}
                </p>
                <Button 
                  href="mailto:amarquardt20@gmail.com"
                  variant="outline"
                  size="sm"
                >
                  amarquardt20@gmail.com
                </Button>
              </div>
            </div>
          </div>
        </div>

        <div class="slide-up stagger-2">
          <div class="bg-white dark:bg-gray-800 rounded-xl p-8 border border-gray-200 dark:border-gray-700 hover:shadow-lg transition-shadow">
            <div class="flex items-start space-x-4">
              <div class="flex-shrink-0 w-12 h-12 bg-blue-100 dark:bg-blue-900 rounded-lg flex items-center justify-center">
                <svg class="h-6 w-6 text-blue-600 dark:text-blue-400" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                </svg>
              </div>
              <div class="flex-1">
                <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">{t('contact.linkedin.title')}</h3>
                <p class="text-gray-600 dark:text-gray-300 mb-4">
                  {t('contact.linkedin.description')}
                </p>
                <Button 
                  href="https://www.linkedin.com/in/agustin-marquardt-0015611b3/"
                  target="_blank"
                  rel="noopener noreferrer"
                  variant="outline"
                  size="sm"
                >
                  {t('contact.linkedin.button')}
                </Button>
              </div>
            </div>
          </div>
        </div>

        <div class="slide-up stagger-3">
          <div class="bg-white dark:bg-gray-800 rounded-xl p-8 border border-gray-200 dark:border-gray-700 hover:shadow-lg transition-shadow">
            <div class="flex items-start space-x-4">
              <div class="flex-shrink-0 w-12 h-12 bg-gray-900 dark:bg-gray-700 rounded-lg flex items-center justify-center">
                <svg class="h-6 w-6 text-white" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                </svg>
              </div>
              <div class="flex-1">
                <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">{t('contact.github.title')}</h3>
                <p class="text-gray-600 dark:text-gray-300 mb-4">
                  {t('contact.github.description')}
                </p>
                <Button 
                  href="https://github.com/marcui13"
                  target="_blank"
                  rel="noopener noreferrer"
                  variant="outline"
                  size="sm"
                >
                  {t('contact.github.button')}
                </Button>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Quick Contact Form -->
      <div class="slide-up stagger-4">
        <div class="bg-gradient-to-br from-blue-50 to-purple-50 dark:from-gray-800 dark:to-gray-900 rounded-2xl p-8">
          <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6">
            {t('contact.form.title')}
          </h2>
          
          <form class="space-y-6">
            <div>
              <label for="name" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                {t('contact.form.name')}
              </label>
              <input 
                type="text" 
                id="name" 
                name="name"
                class="w-full px-4 py-3 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-colors"
                placeholder={t('contact.form.name.placeholder')}
              />
            </div>
            
            <div>
              <label for="email" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                {t('contact.form.email')}
              </label>
              <input 
                type="email" 
                id="email" 
                name="email"
                class="w-full px-4 py-3 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-colors"
                placeholder={t('contact.form.email.placeholder')}
              />
            </div>
            
            <div>
              <label for="subject" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                {t('contact.form.subject')}
              </label>
              <select 
                id="subject" 
                name="subject"
                class="w-full px-4 py-3 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-colors"
              >
                <option value="">{t('contact.form.subject.placeholder')}</option>
                <option value="trabajo">{t('contact.form.subject.job')}</option>
                <option value="proyecto">{t('contact.form.subject.project')}</option>
                <option value="consulta">{t('contact.form.subject.tech')}</option>
                <option value="otro">{t('contact.form.subject.other')}</option>
              </select>
            </div>
            
            <div>
              <label for="message" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                {t('contact.form.message')}
              </label>
              <textarea 
                id="message" 
                name="message" 
                rows="4"
                class="w-full px-4 py-3 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-colors"
                placeholder={t('contact.form.message.placeholder')}
              ></textarea>
            </div>
            
            <div class="text-center">
              <p class="text-sm text-gray-600 dark:text-gray-400 mb-4">
                {t('contact.form.demo')}
              </p>
              <Button 
                href="mailto:amarquardt20@gmail.com?subject=Contact from portfolio"
                variant="primary" 
                size="lg"
                class="w-full sm:w-auto"
              >
                {t('contact.form.send')}
              </Button>
            </div>
          </form>
        </div>
      </div>
    </div>

    <!-- FAQ Section -->
    <section class="mb-16 slide-up stagger-5">
      <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-8 text-center">
        {t('contact.faq.title')}
      </h2>
      
      <div class="space-y-6">
        <div class="bg-white dark:bg-gray-800 rounded-xl p-6 border border-gray-200 dark:border-gray-700">
          <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-3">
            {t('contact.faq.freelance.q')}
          </h3>
          <p class="text-gray-600 dark:text-gray-300">
            {t('contact.faq.freelance.a')}
          </p>
        </div>
        
        <div class="bg-white dark:bg-gray-800 rounded-xl p-6 border border-gray-200 dark:border-gray-700">
          <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-3">
            {t('contact.faq.tech.q')}
          </h3>
          <p class="text-gray-600 dark:text-gray-300">
            {t('contact.faq.tech.a')}
          </p>
        </div>
        
        <div class="bg-white dark:bg-gray-800 rounded-xl p-6 border border-gray-200 dark:border-gray-700">
          <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-3">
            {t('contact.faq.mentoring.q')}
          </h3>
          <p class="text-gray-600 dark:text-gray-300">
            {t('contact.faq.mentoring.a')}
          </p>
        </div>
        
        <div class="bg-white dark:bg-gray-800 rounded-xl p-6 border border-gray-200 dark:border-gray-700">
          <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-3">
            {t('contact.faq.response.q')}
          </h3>
          <p class="text-gray-600 dark:text-gray-300">
            {t('contact.faq.response.a')}
          </p>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="bg-blue-600 dark:bg-blue-800 rounded-2xl p-8 lg:p-12 text-center text-white slide-up stagger-6">
      <h2 class="text-3xl font-bold mb-4">
        {t('contact.cta.title')}
      </h2>
      <p class="text-xl text-blue-100 mb-8 max-w-2xl mx-auto">
        {t('contact.cta.description')}
      </p>
      
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <Button 
          href="mailto:amarquardt20@gmail.com?subject=Hello from your portfolio!"
          variant="secondary" 
          size="lg"
        >
          {t('contact.cta.email')}
        </Button>
        
        <Button 
          href="https://www.linkedin.com/in/agustin-marquardt-0015611b3/"
          target="_blank"
          rel="noopener noreferrer"
          variant="outline" 
          size="lg"
          class="border-blue-300 text-blue-100 hover:bg-blue-700"
        >
          {t('contact.cta.linkedin')}
        </Button>
      </div>
    </section>
  </div>

  <Footer slot="footer" />
</MainLayout>

<script>
  // Simple form validation (client-side only for demo)
  const form = document.querySelector('form');
  const submitBtn = document.querySelector('button[type="submit"]');
  
  if (form && submitBtn) {
    form.addEventListener('submit', (e) => {
      e.preventDefault();
      
      const name = form.querySelector('#name').value;
      const email = form.querySelector('#email').value;
      const subject = form.querySelector('#subject').value;
      const message = form.querySelector('#message').value;
      
      if (name && email && subject && message) {
        const mailtoLink = `mailto:amarquardt20@gmail.com?subject=${encodeURIComponent(subject)}&body=${encodeURIComponent(`Name: ${name}\nEmail: ${email}\n\nMessage:\n${message}`)}`;
        window.location.href = mailtoLink;
      } else {
        alert('Please complete all fields.');
      }
    });
  }
</script>