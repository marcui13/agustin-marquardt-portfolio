---
import MainLayout from "../../layouts/MainLayout.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import Button from "../../components/Button.astro";
import { getLangFromUrl, useTranslations } from "../../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<MainLayout title={t("home.title")}>
  <Header slot="header" />

  <!-- Hero Section -->
  <section
    class="bg-gradient-to-br from-blue-50 via-white to-purple-50 dark:from-gray-900 dark:via-gray-800 dark:to-blue-900/20 py-20 lg:py-32"
  >
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center fade-in">
        <!-- Profile Image -->
        <div class="mb-8">
          <img
            src="/images/marcui-profile.jpeg"
            alt="Agustín Marquardt"
            class="w-32 h-32 rounded-full mx-auto object-cover shadow-lg"
          />
        </div>

        <h1
          class="text-4xl lg:text-6xl font-bold text-gray-900 dark:text-white mb-6 slide-up stagger-1"
        >
          {t("home.greeting")}
          <span
            class="text-transparent bg-clip-text bg-gradient-to-r from-blue-600 to-purple-600"
            >Agustín Marquardt</span
          >
        </h1>

        <p
          class="text-xl lg:text-2xl text-gray-600 dark:text-gray-300 mb-8 max-w-3xl mx-auto slide-up stagger-2"
        >
          {t("home.subtitle")}
        </p>

        <div
          class="flex flex-col sm:flex-row gap-4 justify-center slide-up stagger-3"
        >
          <Button
            href={lang === "es" ? "/projects" : `/${lang}/projects`}
            variant="primary"
            size="lg"
          >
            {t("home.cta.projects")}
          </Button>
          <Button
            href={lang === "es" ? "/contact" : `/${lang}/contact`}
            variant="outline"
            size="lg"
          >
            {t("home.cta.contact")}
          </Button>
        </div>
      </div>
    </div>
  </section>

  <!-- Quick About -->
  <section class="py-16 bg-white dark:bg-gray-900">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid md:grid-cols-2 gap-12 items-center">
        <div class="slide-up stagger-1">
          <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-6">
            {t("home.section.title")}
          </h2>
          <p class="text-gray-600 dark:text-gray-300 mb-6 text-lg">
            {t("home.section.description1")}
          </p>
          <p class="text-gray-600 dark:text-gray-300 mb-8">
            {t("home.section.description2")}
          </p>
          <Button
            href={lang === "es" ? "/about" : `/${lang}/about`}
            variant="secondary"
          >
            {t("home.section.cta")}
          </Button>
        </div>

        <div class="slide-up stagger-2">
          <div class="bg-gray-50 dark:bg-gray-800 rounded-2xl p-8">
            <h3
              class="text-xl font-semibold text-gray-900 dark:text-white mb-6"
            >
              {t("home.stack.title")}
            </h3>
            <div class="grid grid-cols-2 gap-4">
              <div class="flex items-center space-x-3">
                <div class="w-3 h-3 bg-red-500 rounded-full"></div>
                <span class="text-gray-700 dark:text-gray-300">Angular</span>
              </div>
              <div class="flex items-center space-x-3">
                <div class="w-3 h-3 bg-blue-500 rounded-full"></div>
                <span class="text-gray-700 dark:text-gray-300">Ionic</span>
              </div>
              <div class="flex items-center space-x-3">
                <div class="w-3 h-3 bg-green-500 rounded-full"></div>
                <span class="text-gray-700 dark:text-gray-300">Capacitor</span>
              </div>
              <div class="flex items-center space-x-3">
                <div class="w-3 h-3 bg-yellow-500 rounded-full"></div>
                <span class="text-gray-700 dark:text-gray-300">Firebase</span>
              </div>
              <div class="flex items-center space-x-3">
                <div class="w-3 h-3 bg-purple-500 rounded-full"></div>
                <span class="text-gray-700 dark:text-gray-300">OpenAI API</span>
              </div>
              <div class="flex items-center space-x-3">
                <div class="w-3 h-3 bg-indigo-500 rounded-full"></div>
                <span class="text-gray-700 dark:text-gray-300">Gemini API</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="bg-blue-600 dark:bg-blue-800 py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl font-bold text-white mb-4 slide-up">
        {t("home.cta.section.title")}
      </h2>
      <p class="text-xl text-blue-100 mb-8 slide-up stagger-1">
        {t("home.cta.section.description")}
      </p>
      <Button
        href={lang === "es" ? "/contact" : `/${lang}/contact`}
        variant="secondary"
        size="lg"
        class="slide-up stagger-2"
      >
        {t("home.cta.section.button")}
      </Button>
    </div>
  </section>

  <Footer slot="footer" />
</MainLayout>
