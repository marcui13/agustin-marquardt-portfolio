---
import MainLayout from '../../layouts/MainLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import Button from '../../components/Button.astro';
import { getLangFromUrl, useTranslations } from '../../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<MainLayout title={t('about.title')}>
  <Header slot="header" />
  
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
    <!-- Header -->
    <div class="text-center mb-16 fade-in">
      <h1 class="text-4xl lg:text-5xl font-bold text-gray-900 dark:text-white mb-6">
        {t('about.heading')}
      </h1>
      <p class="text-xl text-gray-600 dark:text-gray-300 max-w-2xl mx-auto">
        {t('about.subtitle')}
      </p>
    </div>

    <!-- Main Content -->
    <div class="space-y-16">
      <!-- Experience -->
      <section class="slide-up stagger-1">
        <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-8">
          {t('about.experience.title')}
        </h2>
        
        <div class="bg-white dark:bg-gray-800 rounded-xl p-8 border border-gray-200 dark:border-gray-700">
          <div class="flex items-start space-x-4">
            <div class="flex-shrink-0 w-12 h-12 bg-blue-100 dark:bg-blue-900 rounded-lg flex items-center justify-center">
              <span class="text-blue-600 dark:text-blue-400 font-bold">P</span>
            </div>
            <div class="flex-1">
              <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">
                {t('about.experience.job')}
              </h3>
              <p class="text-gray-600 dark:text-gray-300 mb-4">
                {t('about.experience.description')}
              </p>
              <div class="flex flex-wrap gap-2">
                <span class="px-3 py-1 bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-300 rounded-full text-sm">Angular</span>
                <span class="px-3 py-1 bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-300 rounded-full text-sm">Ionic</span>
                <span class="px-3 py-1 bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-300 rounded-full text-sm">Capacitor</span>
                <span class="px-3 py-1 bg-yellow-100 text-yellow-800 dark:bg-yellow-900 dark:text-yellow-300 rounded-full text-sm">Firebase</span>
              </div>
            </div>
          </div>
        </div>
      </section>

      <!-- Education -->
      <section class="slide-up stagger-2">
        <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-8">
          {t('about.education.title')}
        </h2>
        
        <div class="bg-white dark:bg-gray-800 rounded-xl p-8 border border-gray-200 dark:border-gray-700">
          <div class="flex items-start space-x-4">
            <div class="flex-shrink-0 w-12 h-12 bg-purple-100 dark:bg-purple-900 rounded-lg flex items-center justify-center">
              <span class="text-purple-600 dark:text-purple-400 font-bold">UNR</span>
            </div>
            <div class="flex-1">
              <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">
                {t('about.education.degree')}
              </h3>
              <p class="text-gray-600 dark:text-gray-300 mb-4">
                {t('about.education.university')}
              </p>
              <p class="text-gray-600 dark:text-gray-300">
                {t('about.education.description')}
              </p>
            </div>
          </div>
        </div>
      </section>

      <!-- Personal Projects -->
      <section class="slide-up stagger-3">
        <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-8">
          {t('about.projects.title')}
        </h2>
        
        <div class="space-y-6">
          <div class="bg-white dark:bg-gray-800 rounded-xl p-6 border border-gray-200 dark:border-gray-700">
            <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-3">
              {t('about.projects.ai.title')}
            </h3>
            <p class="text-gray-600 dark:text-gray-300 mb-4">
              {t('about.projects.ai.description')}
            </p>
            <div class="flex flex-wrap gap-2">
              <span class="px-3 py-1 bg-purple-100 text-purple-800 dark:bg-purple-900 dark:text-purple-300 rounded-full text-sm">OpenAI API</span>
              <span class="px-3 py-1 bg-indigo-100 text-indigo-800 dark:bg-indigo-900 dark:text-indigo-300 rounded-full text-sm">Gemini API</span>
              <span class="px-3 py-1 bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-300 rounded-full text-sm">Ionic</span>
            </div>
          </div>

          <div class="bg-white dark:bg-gray-800 rounded-xl p-6 border border-gray-200 dark:border-gray-700">
            <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-3">
              {t('about.projects.web3.title')}
            </h3>
            <p class="text-gray-600 dark:text-gray-300 mb-4">
              {t('about.projects.web3.description')}
            </p>
            <div class="flex flex-wrap gap-2">
              <span class="px-3 py-1 bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-300 rounded-full text-sm">Solidity</span>
              <span class="px-3 py-1 bg-orange-100 text-orange-800 dark:bg-orange-900 dark:text-orange-300 rounded-full text-sm">Web3</span>
              <span class="px-3 py-1 bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-300 rounded-full text-sm">Smart Contracts</span>
            </div>
          </div>
        </div>
      </section>

      <!-- Interests -->
      <section class="slide-up stagger-4">
        <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-8">
          {t('about.interests.title')}
        </h2>
        
        <div class="grid md:grid-cols-2 gap-6">
          <a href="/es/interests#finance-section" class="group block">
            <div class="bg-white dark:bg-gray-800 rounded-xl p-6 border border-gray-200 dark:border-gray-700 transition-all duration-300 hover:shadow-lg hover:-translate-y-1">
              <div class="text-2xl mb-3 transform transition-transform group-hover:scale-110">üí∞</div>
              <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors">{t('about.interests.finance.title')}</h3>
              <p class="text-gray-600 dark:text-gray-300">
                {t('about.interests.finance.description')}
              </p>
            </div>
          </a>

          <a href="/es/interests#development-section" class="group block">
            <div class="bg-white dark:bg-gray-800 rounded-xl p-6 border border-gray-200 dark:border-gray-700 transition-all duration-300 hover:shadow-lg hover:-translate-y-1">
              <div class="text-2xl mb-3 transform transition-transform group-hover:scale-110">üöÄ</div>
              <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors">{t('about.interests.development.title')}</h3>
              <p class="text-gray-600 dark:text-gray-300">
                {t('about.interests.development.description')}
              </p>
            </div>
          </a>

          <a href="/es/interests#ai-section" class="group block">
            <div class="bg-white dark:bg-gray-800 rounded-xl p-6 border border-gray-200 dark:border-gray-700 transition-all duration-300 hover:shadow-lg hover:-translate-y-1">
              <div class="text-2xl mb-3 transform transition-transform group-hover:scale-110">ü§ñ</div>
              <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors">{t('about.interests.ai.title')}</h3>
              <p class="text-gray-600 dark:text-gray-300">
                {t('about.interests.ai.description')}
              </p>
            </div>
          </a>

          <a href="/es/interests#cooking-section" class="group block">
            <div class="bg-white dark:bg-gray-800 rounded-xl p-6 border border-gray-200 dark:border-gray-700 transition-all duration-300 hover:shadow-lg hover:-translate-y-1">
              <div class="text-2xl mb-3 transform transition-transform group-hover:scale-110">üë®‚Äçüç≥</div>
              <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors">{t('about.interests.cooking.title')}</h3>
              <p class="text-gray-600 dark:text-gray-300">
                {t('about.interests.cooking.description')}
              </p>
            </div>
          </a>

          <a href="/es/interests#mindfulness-section" class="group block">
            <div class="bg-white dark:bg-gray-800 rounded-xl p-6 border border-gray-200 dark:border-gray-700 transition-all duration-300 hover:shadow-lg hover:-translate-y-1">
              <div class="text-2xl mb-3 transform transition-transform group-hover:scale-110">üß†</div>
              <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors">{t('about.interests.mindfulness.title')}</h3>
              <p class="text-gray-600 dark:text-gray-300">
                {t('about.interests.mindfulness.description')}
              </p>
            </div>
          </a>
        </div>
      </section>

      <!-- CTA -->
      <section class="text-center py-16 slide-up stagger-4">
        <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-4">
          {t('about.cta.title')}
        </h2>
        <p class="text-xl text-gray-600 dark:text-gray-300 mb-8 max-w-2xl mx-auto">
          {t('about.cta.description')}
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <Button href={lang === 'en' ? '/projects' : `/${lang}/projects`} variant="primary" size="lg">
            {t('about.cta.projects')}
          </Button>
          <Button href={lang === 'en' ? '/contact' : `/${lang}/contact`} variant="outline" size="lg">
            {t('about.cta.contact')}
          </Button>
        </div>
      </section>
    </div>
  </div>

  <Footer slot="footer" />
</MainLayout>